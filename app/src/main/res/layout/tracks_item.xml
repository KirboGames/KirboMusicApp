<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/track">
    <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            android:elevation="10dp">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cover"
                android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingHorizontal="5dp">

        <TextView
                android:id="@+id/trackName"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/releaseDate"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/available_telegram" android:layout_margin="2dp" android:layout_width="15dp"
                       android:layout_height="15dp"
                       android:src="@drawable/telegram"/>
            <ImageView android:id="@+id/available_vk" android:layout_margin="2dp" android:layout_width="15dp"
                       android:layout_height="15dp"
                       android:src="@drawable/vk"/>
            <ImageView android:id="@+id/available_youtube" android:layout_margin="2dp" android:layout_width="15dp"
                       android:layout_height="15dp"
                       android:src="@drawable/youtube"/>
            <ImageView android:id="@+id/available_spotify" android:layout_margin="2dp" android:layout_width="15dp"
                       android:layout_height="15dp"
                       android:src="@drawable/spotify"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>