<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/track_info_track_cover_bg"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:translationY="-80dp">
            <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/track_info_track_cover"
                    android:layout_gravity="center_horizontal"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/track_info_track_name"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#ffba00"
                        android:elevation="10dp">
                        <ImageView android:src="@drawable/telegram" android:layout_margin="5dp" android:layout_width="40dp" android:layout_height="40dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#ffba00"
                        android:elevation="10dp">
                    <ImageView android:src="@drawable/vk" android:layout_margin="5dp" android:layout_width="40dp" android:layout_height="40dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#ffba00"
                        android:elevation="10dp">
                    <ImageView android:src="@drawable/youtube" android:layout_margin="5dp" android:layout_width="40dp" android:layout_height="40dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#ffba00"
                        android:elevation="10dp">
                    <ImageView android:src="@drawable/spotify" android:layout_margin="5dp" android:layout_width="40dp" android:layout_height="40dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>